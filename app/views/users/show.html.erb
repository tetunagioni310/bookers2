  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'shared/info', user: @user, book: @book %>
      
      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>

        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <a href="/users/<%= book.user.id %>">
                <%= image_tag book.user.get_profile_image(80,80) %>
              </a>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>