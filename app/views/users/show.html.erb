<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'books/info', book: @book %>

       <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>

        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</main>