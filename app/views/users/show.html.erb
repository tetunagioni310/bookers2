  <p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.get_profile_image(200,200) %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "100x100"%>
      <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="/users/<%= @user.id %>/edit"><i class="fas fa-user-cog"></i></a>
      </div>
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model: @book, url: books_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control book_title" %>
      </div>

      <div class="form-group">
        <%= f.label :body, "Opinion"%>
        <%= f.text_area :body, class: "form-control book_body" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success"  %>
      </div>
      <% end %>
    </div>


       <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>

        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <a href="/users/<%= @user.id %>">
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: "80x80"%>
              <% end %>
              </a>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>