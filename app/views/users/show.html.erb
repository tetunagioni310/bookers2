  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <%= render 'books/info', book: @book %>

       <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>

        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <% if current_user.profile_image.attached? %>
                <%= image_tag current_user.profile_image, size: "80x80" %>
              <% else %>
                <%= image_tag 'default-image.jpeg', size: "80x80"%>
              <% end %>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>