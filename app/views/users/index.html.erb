<div class="container px-5 px-sm-0">
  <div class="row">
      
      <%= render 'shared/info', book: @book, user: current_user %>

      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>

        <tbody>
          <% @users.each do |user|%>
          <tr>
            <td>
                <%= image_tag user.get_profile_image(80,80) %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show","/users/#{user.id}" %></td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>