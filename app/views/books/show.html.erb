<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.get_profile_image(200,200) %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "100x100"%>
      <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="/users/<%= @user.id %>/edit"><i class="fas fa-user-cog"></i></a>
      </div>
      <h2 class="mt-3">New book</h2>
      
      <%= form_with model: @book, url: books_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control book_title", value: "" %>
      </div>

      <div class="form-group">
        <%= f.label :body, "Opinion"%>
        <%= f.text_area :body, class: "form-control book_body", value: "" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success"  %>
      </div>
      <% end %>
    </div>

    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if current_user.profile_image.attached? %>
                <%= image_tag current_user.get_profile_image(80,80) %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: "100x100"%>
              <% end %>
              <br><%= link_to @book.user.name, "/users/#{@book.user.id}" %>
            </td>
            <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
            <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
            <td><%= link_to "Edit", "/books/#{@book.id}/edit", class: "btn btn-sm btn-success"%></td>
            <td><%= link_to "Destroy", "/books/#{@book.id}", method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger"%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>