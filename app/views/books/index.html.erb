<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
   <div>
   <% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error")%> prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>
         <%= message %>
        </li>
      <% end %>
    </ul>
   <% end %>
   </div>
   <div class="row">
    <%= render 'info', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book|%>
          <tr>
            <td>
              <a href="/users/<%= book.user.id %>">
              <% if current_user.profile_image.attached? %>
                <%= image_tag current_user.profile_image, size: "80x80" %>
              <% else %>
                <%= image_tag 'default-image.jpeg', size: "80x80"%>
              <% end %>
              </a>
            </td>
            <td>
              <a href="/books/<%= book.id %>"><%= book.title %></a>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>